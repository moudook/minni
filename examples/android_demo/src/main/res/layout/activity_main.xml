<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minni Framework Demo"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for service..."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btn_run_logic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Run Logic (Knowledge Graph)"
        app:layout_constraintTop_toBottomOf="@id/text_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btn_run_sat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Run Logic (SAT Solver)"
        app:layout_constraintTop_toBottomOf="@id/btn_run_logic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_run_rules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Run Logic (Rule Engine)"
        app:layout_constraintTop_toBottomOf="@id/btn_run_sat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_run_signal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Run Signal (DSP Benchmark)"
        app:layout_constraintTop_toBottomOf="@id/btn_run_rules"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_run_wifi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Run WiFi Sensing (Context)"
        app:layout_constraintTop_toBottomOf="@id/btn_run_signal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_run_vector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Run Vector Search (RAG)"
        app:layout_constraintTop_toBottomOf="@id/btn_run_wifi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_run_genai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Run GenAI (LiteRT)"
        app:layout_constraintTop_toBottomOf="@id/btn_run_vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_test_security"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Test Secure Storage"
        app:layout_constraintTop_toBottomOf="@id/btn_run_genai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
